{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "module": "CommonJS",
    "types": ["node"],
    "composite": false,
    "target": "es2016",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
